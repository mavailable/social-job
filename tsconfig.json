{
  "compilerOptions": {
    "target": "ES2019",
    "module": "None",
    "moduleResolution": "classic",
    "verbatimModuleSyntax": false,
    "isolatedModules": false,
    "importsNotUsedAsValues": "remove",
    "lib": ["ES2019"],
    "types": ["google-apps-script"],

    "strict": true,
    "noImplicitAny": false,

    "rootDir": "src",
    "outDir": "dist",

    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
